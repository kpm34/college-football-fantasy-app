{
  "project": "college-football-fantasy-app",
  "stack": {
    "frontend": {
      "framework": "nextjs",
      "version": "15.x",
      "language": "typescript",
      "styling": ["tailwindcss"],
      "3d": ["three", "react-three-fiber", "spline"]
    },
    "backend": {
      "platform": "appwrite",
      "region": "nyc",
      "runtime": ["node"],
      "edge": true
    },
    "deployment": {
      "platform": "vercel",
      "edgeFunctions": true,
      "primaryDomain": "cfbfantasy.app",
      "secondaryDomains": ["collegefootballfantasy.app"]
    }
  },
  "env": {
    "requiredServer": [
      "APPWRITE_API_KEY",
      "AI_GATEWAY_API_KEY",
      "CFBD_API_KEY",
      "DATABASE_ID"
    ],
    "requiredClient": [
      "NEXT_PUBLIC_APPWRITE_ENDPOINT",
      "NEXT_PUBLIC_APPWRITE_PROJECT_ID",
      "NEXT_PUBLIC_APPWRITE_DATABASE_ID"
    ],
    "collections": {
      "players": "NEXT_PUBLIC_APPWRITE_COLLECTION_PLAYERS",
      "leagues": "NEXT_PUBLIC_APPWRITE_COLLECTION_LEAGUES",
      "rosters": "NEXT_PUBLIC_APPWRITE_COLLECTION_ROSTERS",
      "games": "NEXT_PUBLIC_APPWRITE_COLLECTION_GAMES",
      "rankings": "NEXT_PUBLIC_APPWRITE_COLLECTION_RANKINGS",
      "auctions": "NEXT_PUBLIC_APPWRITE_COLLECTION_AUCTIONS",
      "bids": "NEXT_PUBLIC_APPWRITE_COLLECTION_BIDS",
      "lineups": "NEXT_PUBLIC_APPWRITE_COLLECTION_LINEUPS",
      "projectionsWeekly": "NEXT_PUBLIC_APPWRITE_COLLECTION_PROJECTIONS_WEEKLY",
      "projectionsYearly": "NEXT_PUBLIC_APPWRITE_COLLECTION_PROJECTIONS_YEARLY",
      "modelInputs": "NEXT_PUBLIC_APPWRITE_COLLECTION_MODEL_INPUTS",
      "userCustomProjections": "NEXT_PUBLIC_APPWRITE_COLLECTION_USER_CUSTOM_PROJECTIONS"
    }
  },
  "apis": {
    "core": [
      { "method": "POST", "path": "/api/leagues/create", "notes": "Maps UI fields; auto-joins commissioner" },
      { "method": "POST", "path": "/api/leagues/join", "notes": "Validates capacity/membership/password/invite" },
      { "method": "GET",  "path": "/api/leagues/search", "notes": "Returns $id,id,teams,type,hasPassword" },
      { "method": "GET",  "path": "/api/leagues/invite", "notes": "Validate token or generate links" }
    ]
  },
  "mcp": {
    "servers": [
      {
        "name": "appwrite",
        "command": "uvx",
        "args": ["mcp-server-appwrite", "--users"],
        "env": {
          "APPWRITE_ENDPOINT": "https://nyc.cloud.appwrite.io/v1",
          "APPWRITE_PROJECT_ID": "college-football-fantasy-app",
          "APPWRITE_API_KEY": "<SECRET>"
        },
        "notes": "Use for server-side Appwrite admin operations in dev-time."
      },
      {
        "name": "vercel",
        "command": "npx",
        "args": ["mcp-server-vercel"],
        "env": {
          "VERCEL_TOKEN": "<SECRET>"
        },
        "notes": "Deploy, pull env, manage aliases via AI."
      }
    ]
  },
  "commands": {
    "dev": [
      "npm run dev",
      "npm run typecheck",
      "npm run lint"
    ],
    "deploy": [
      "vercel pull --environment=production",
      "vercel --prod --force",
      "vercel alias set <deployment> cfbfantasy.app"
    ],
    "debug": [
      "curl /api/health",
      "vercel logs --follow"
    ]
  }
}
