{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Cursor MCP Configuration Template",
  "description": "Copy this to ~/.cursor/mcp.json for full Claude Code integration",
  
  "mcpServers": {
    "appwrite": {
      "command": "uvx",
      "args": ["mcp-server-appwrite", "--users"],
      "env": {
        "APPWRITE_ENDPOINT": "https://nyc.cloud.appwrite.io/v1",
        "APPWRITE_PROJECT_ID": "college-football-fantasy-app",
        "APPWRITE_DATABASE_ID": "college-football-fantasy"
      }
    },
    "github": {
      "command": "npx", 
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "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"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/kashyapmaheshwari/college-football-fantasy-app"
      ]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repository",
        "/Users/kashyapmaheshwari/college-football-fantasy-app"
      ]
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "BSAQJHPdhjJ3hPcblDWtVJ8Z1qI6O2E"
      }
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    }
  },
  
  "instructions": {
    "setup": [
      "1. Copy this file to ~/.cursor/mcp.json",
      "2. Set APPWRITE_API_KEY in your shell environment (don't hardcode)",
      "3. Update file paths to match your system",
      "4. Restart Cursor for changes to take effect",
      "5. Test with Claude Code by asking about GitHub workflows or database operations"
    ],
    "security": [
      "- Keep API keys in environment variables, not in this file",
      "- For APPWRITE_API_KEY: export APPWRITE_API_KEY=your-key-here", 
      "- GitHub token is included for immediate access but can be env var too",
      "- Never commit this file with real API keys to version control"
    ],
    "usage": [
      "- GitHub: 'Check recent workflow runs', 'Show me workflow failures'",
      "- Appwrite: 'List users', 'Show league data', 'Update collection'", 
      "- Brave Search: 'Search for Next.js documentation', 'Find API solutions'",
      "- Memory: Context persists across Claude Code sessions",
      "- Filesystem: Direct project file operations", 
      "- Git: Repository operations and history"
    ]
  }
}